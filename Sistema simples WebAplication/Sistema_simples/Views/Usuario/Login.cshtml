@model Sistema_simples.Models.Usuario


<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             @{
                    if (ViewBag.LoginStatus != null)
                    {
                        if (ViewBag.LoginStatus == "0")
                        {
                            <span asp-validation-for="User" class="text-danger">Usuário ou senha Invalido</span>
                        }
                    }
                }
            <div class="form-group">
                <label class="control-label">Usuário:</label>
                <input asp-for="User" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Senha:</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <input type="submit" value="Logar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
